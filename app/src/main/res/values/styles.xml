<?xml version="1.0" encoding="utf-8"?><!--Defines different styles that are used throughout the application's design-->
<resources>

    <!--General theme of the whole application-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:fontFamily">@font/lato_reg</item>
    </style>

    <!--Style of the Splash Screen-->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimaryDark">@color/colorGradient2</item>
    </style>

    <!--Style of the pop up which alerts the user to change their Usage Access Settings-->
    <style name="UsageOffText" parent="Theme.AppCompat">
        <item name="android:textSize">@dimen/x_large_font_size</item>
        <item name="android:textColor">@color/colorFontStyle</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <!--Style of the Header in the StatisticsFragment-->
    <style name="StatsPageDateHeader" parent="Theme.AppCompat">
        <item name="android:textSize">@dimen/x_large_font_size</item>
        <item name="android:textColor">@color/colorThird</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <!--Style of the 3 large buttons in the SettingsFragment-->
    <style name="SettingsButtons" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/colorToDoBackground</item>
        <item name="android:textColor">@color/colorFontStyle</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
    </style>

    <!--Style of the Title of each kind of Notification option in NotificationSettingsFragment-->
    <style name="NotificationTitle" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/colorToDoBackground</item>
        <item name="android:textColor">@color/colorFontStyle</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <!--Style of the description of each kind of Notification option in NotificationSettingsFragment-->
    <style name="NotificationDescription" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/colorToDoBackground</item>
        <item name="android:textColor">@color/colorFontStyle</item>
        <item name="android:fontFamily">@font/lato_italic</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
    </style>

    <!--Style of the text in the HelpCenterFragment-->
    <style name="HelpCenterText" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorFontStyle</item>
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
    </style>

    <!--Style of the ToolBar used across each fragment in the application-->
    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/gradient_drawable</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
    </style>

    <!--Style of the text in the toolbar across each fragment in the application-->
    <style name="ToolbarText" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/top_toolbar_font_size</item>
        <item name="android:textColor">@color/colorTint</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <!--Style of divider in SettingsFragment-->
    <style name="SettingsDivider" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!--Style of the top three icons in the StatisticsFragment-->
    <style name="StatsIconLayout" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/stats_page_margin_between_icons</item>
        <item name="android:layout_marginStart">@dimen/stats_page_margin_between_icons</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Style of the image of each Stats Icon in the StatisticsFragment -->
    <style name="StatsIconImage" parent="Theme.AppCompat">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!--Style of the text used below each StatsIcon image in the StatisticsFragment-->
    <style name="StatsIconTopText" parent="Theme.AppCompat">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/colorFontStyle</item>
    </style>

    <!--Style of the changing text of each StatsIcon in StatisticsFragment-->
    <style name="StatsIconBottomText" parent="Theme.AppCompat">
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
