<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato_reg</item>
    </style>

    <style name="LargeFont" parent="Theme.AppCompat">
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name = "SettingsButtons" parent = "Theme.AppCompat">
        <item name="android:backgroundTint">@color/colorToDoBackground</item>
        <item name="android:textColor">@color/colorFontStyle</item>
        <item name="android:fontFamily">@font/lato_reg</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
    </style>

</resources>
